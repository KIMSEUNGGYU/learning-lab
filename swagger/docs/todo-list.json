            "example": "gyuu6"
          },
          "userPassword": {
            "type": "string",
            "description": "user password",
            "example": "password!@"
          }
        }
      },
      "signin": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "user id",
            "example": "gyu"
          },
          "userPassword": {
            "type": "string",
            "description": "user password",
            "example": "123456789"
          }
        }
      },
      "createTodo": {
        "type": "object",
        "properties": {
          "todoId": {
            "type": "string",
