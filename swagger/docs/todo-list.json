        "properties": {
          "todoTitleId": {
            "type": "number",
            "description": "todo Title id",
            "example": 1
          },
          "todoTitle": {
            "type": "string",
            "description": "TODO Title Text",
            "example": "오늘의 할 일"
          }
        }
      },
      "updateTodoItem": {
        "type": "object",
        "properties": {
          "todoItemId": {
            "type": "string",
