          },
          "todoItemText": {
            "type": "string",
            "description": "TODO Item Text",
            "example": "백준 2049"
          }
        }
      },
      "inline_response_201": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Created Success"
          },
          "result": {
            "type": "object"
          }
        }
