  "servers": [
    {
      "url": "{protocol}://{domain}/{version}",
      "variables": {
        "protocol": {
          "default": "http",
          "enum": ["http", "https"]
        },
        "domain": {
          "default": "127.0.0.1:3000",
          "enum": ["127.0.0.1:3000"]
        },
        "version": {
          "default": "v1",
          "enum": ["v1"]
        }
      }
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "API USER"
    },
    {
      "name": "todo",
      "description": "API TODO"
    }
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": ["user"],
        "summary": "회원가입 API",
        "requestBody": {
          "description": "User ID / Password",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/signup"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created Success / 요청이 성공하였으며, 새로운 리소스가 생성되었습니다.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_201"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request / 잘못된 요청입니다. 요청 파라미터를 확인 하시기 바랍니다.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_400"
                }
              }
            }
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": ["user"],
        "summary": "로그인 API",
        "requestBody": {
          "description": "User ID / Password",
          "content": {
            "application/json": {
              "schema": {
